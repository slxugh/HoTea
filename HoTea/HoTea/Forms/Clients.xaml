<Window x:Class="lab9.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab9"
        Background="#fcf8f4"
        mc:Ignorable="d"
        Title="Редактирование клиента" Height="260" Width="333" ShowInTaskbar="False" ResizeMode="CanMinimize" FontFamily="SF Pro Display" FontSize="14">
    <Grid Margin="0,0,0,-6">
        <Label Content="Код клиента" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="SF Pro Display" FontSize="14"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" FontFamily="SF Pro Display" FontSize="14"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" FontFamily="SF Pro Display" FontSize="14"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" FontFamily="SF Pro Display" FontSize="14"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="108,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="SF Pro Display" FontSize="14" Height="30"/>
        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Margin="108,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="SF Pro Display" FontSize="14" Height="30"/>
        <TextBox x:Name="tbPhone" HorizontalAlignment="Left" Margin="108,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="SF Pro Display" FontSize="14" PreviewTextInput="tbPhone_PreviewTextInput" TextChanged="tbPhone_TextChanged" KeyDown="tbPhone_KeyDown" Height="30"/>
        <Label x:Name="labelClientID" Content="Авто" HorizontalAlignment="Left" Margin="108,12,0,0" VerticalAlignment="Top" Height="23" Width="189" FontFamily="SF Pro Display" FontSize="14"/>
        <Image x:Name="btnSaveInClietn" Height="42" Margin="10,164,0,0" VerticalAlignment="Top" Source="/Assets/Pics/save.png" RenderTransformOrigin="0.5,0.5" MouseDown="btnSaveInClietn_MouseDown" HorizontalAlignment="Left" Width="40">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
